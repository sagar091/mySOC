<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.MySOC" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:lineSpacingExtra">@dimen/line_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="editTextStyle">@style/EditTextDefault</item>
        <item name="android:textViewStyle">@style/TextViewDefault</item>
    </style>

    <style name="EditTextDefault" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:fontFamily">@font/light_300</item>
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
        <item name="android:textColorHint">@color/hint_text_color</item>
    </style>

    <style name="SpinnerDefault" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:background">@drawable/edittext_bg</item>
        <item name="android:padding">@dimen/dimen_16dp</item>
    </style>

    <style name="TextViewDefault" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:fontFamily">@font/regular_400</item>
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
        <item name="titleEnabled">false</item>
        <item name="titleTextColor">@color/white</item>
        <item name="fontFamily">@font/bold_700</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/semi_bold_600</item>
        <item name="android:layout_height">@dimen/BUTTON_HEIGHT</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/drawable_button</item>
        <item name="android:enabled">true</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>